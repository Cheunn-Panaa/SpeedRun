<GuiXml>
    <Controls>

        <TopLevelControl name="SpeedRun_Timer_Container" mouseEnabled="true" movable="true" resizeToFitDescendents="true">
            <Anchor point="LEFT" relativeTo="GuiRoot" relativePoint="LEFT" offsetX="250" offsetY="0" />
            <Controls>
                <Backdrop name="$(parent)_BG" centerColor="66000000" edgeColor="33000000">
                    <Anchor point="TOPLEFT" offsetX="0" offsetY="0" />
                    <Anchor point="BOTTOMRIGHT" offsetX="0" offsetY="0" />
                    <Edge edgeSize="1" />
                </Backdrop>
                <Label name="$(parent)_Title" horizontalAlignment="left" font="ZoFontWinH5" text="Speed Run Timer:" wrapMode="TRUNCATE">
                    <Dimensions x="150" y="24"/>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)" offsetX="2" offsetY="0" />
                </Label>
            </Controls>
        </TopLevelControl>

        <Control name="SpeedRun_Segment" virtual="true" resizeToFitDescendents="true" hidden="true">
            <ResizeToFitPadding width="5" height="0" />
            <Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="0" offsetY="0" />
            <Controls>
                <Label name="$(parent)_Name" horizontalAlignment="left" verticalAlignment="center" font="ZoFontWinH5" text="Boss_Name" wrapMode="TRUNCATE">
                    <Dimensions x="150" y="20"/>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$(parent)" offsetX="3" offsetY="0" />
                </Label>
                <Label name="$(parent)_Diff" horizontalAlignment="center" verticalAlignment="center" font="ZoFontWinH5" text="">
                    <Dimensions x="55" y="20"/>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)_Name" offsetX="0" offsetY="0" />
                </Label>
                <Label name="$(parent)_Best" horizontalAlignment="right" verticalAlignment="center" font="ZoFontWinH5" text="21:02">
                    <Dimensions x="55" y="20"/>
                    <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$(parent)_Diff" offsetX="0" offsetY="0" />
                </Label>
            </Controls>
        </Control>

        <TopLevelControl name="SpeedRun_TotalTimer" mouseEnabled="true" movable="true" resizeToFitDescendents="true">
            <Anchor point="TOPLEFT" relativeTo="SpeedRun_Timer_Container" relativePoint="BOTTOM" offsetX="0" offsetY="0" />
            <Controls>
                <Label name="$(parent)_Title" horizontalAlignment="left" font="ZoFontWinH2" text="0:00:00">
                    <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="$(parent)" offsetX="0" offsetY="0" />
                </Label>
            </Controls>
        </TopLevelControl>

    </Controls>
</GuiXml>